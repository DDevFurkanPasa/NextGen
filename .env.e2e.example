# E2E Test Configuration
# Copy this file to .env.e2e and configure for your environment

# Base URL where your test Next.js app runs
E2E_BASE_URL=http://localhost:3000

# Path to your test Next.js app (optional - if set, Playwright will start it automatically)
# E2E_APP_PATH=./e2e/test-app

# Strapi Configuration (if testing with real Strapi instance)
STRAPI_URL=http://localhost:1337/graphql
STRAPI_TOKEN=your_test_token_here

# Preview Mode Secret
PREVIEW_SECRET=test-secret

# Revalidation Webhook Secret
REVALIDATION_SECRET=test-revalidation-secret
